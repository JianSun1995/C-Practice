<UserControl x:Class="DesktopContactApp.Controls.ContactControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:DesktopContactApp.Controls"
             mc:Ignorable="d"
             d:DesignHeight="90" d:DesignWidth="300">
    <Grid>
        <StackPanel Margin="5" Background="LightGray">
            <TextBlock Name="NameTextBlock" Text="{Binding Name}" FontSize="20" FontWeight="Bold" />
            <TextBlock Name="EmailTextBlock" Text="{Binding Email}" FontSize="15" Foreground="DodgerBlue" />
            <TextBlock Name="PhoneNumberTextBlock" Text="{Binding PhoneNumber}" FontSize="15" FontStyle="Italic" />
        </StackPanel>
    </Grid>
</UserControl>